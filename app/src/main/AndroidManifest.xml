<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asi_soft.able.demo" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplaySimplifiedTextActivity"
            android:label="@string/title_activity_display_simplified_text" >
        </activity>
        <activity
            android:name=".DisplayPictosActivity"
            android:label="@string/title_activity_display_pictos" >
        </activity>
        <activity
            android:name=".DisplaySpeechActivity"
            android:configChanges="keyboard|orientation"
            android:label="@string/title_activity_display_speech" >
        </activity>
        <activity
            android:name=".CreditsActivity"
            android:label="@string/title_activity_credits"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asi_soft.able.demo.MainActivity" />
        </activity>
    </application>

</manifest>
